{% block head %}
<link rel="stylesheet" type="text/css" href="{{ base_path }}/public/messenger.css" />
<script type="application/javascript" src="{{ base_path }}/public/underscore-min.js"></script>
<script type="application/javascript" src="{{ base_path }}/public/backbone-min.js"></script>
<script type="application/javascript" src="{{ base_path }}/public/messenger.js"></script>
{% endblock %}

{% block messenger_template %}
<script type="text/template" id="message-template">
    <span class="message-text"><%= message %></span>
    <div class="tools">
        By <a href="{{ base_path }}/picks/<%= link_name %>" class="by"><%= username %></a> on <em><%= posted %></em>
        <span style="display: inline;"><br /><a class="reply" href="javascript:;">Reply</a></span>
        <div class="input-area">
            <textarea class="reply-textarea" rows="2" name="message"></textarea>
            <br><input class="reply-button" type="button" value="Reply"> or
            <a class="reply-cancel" href="javascript:;">Cancel</a>
        </div>
    </div>
    <div class="replies"></div>
</script>
<script type="text/template" id="input-template">
    <textarea rows="2" name="message" disabled="disabled" id="messenger-textarea-main"></textarea><br />
    <input type="button" value="Reply" id="messenger-input-main-reply" disabled="disabled" />
</script>
{% endblock %}

{% block messenger %}
<div id="messenger">
    <div id="all-messages"><div class="message" id="message-first">&nbsp;<br />No messages, yet. Why don't you add one?<br />&nbsp;</div></div>
</div>
{% endblock %}
