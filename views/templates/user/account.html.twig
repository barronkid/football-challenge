{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}

    <h2>{{ username }}&apos;s Account Page</h2>

    <form method="post" action="{{ base_path }}/my-account" class="account-form">
        <input type="hidden" name="_method" value="PUT" id="_method" />
        <input type="hidden" name="uid" value="{{ uid }}" />
        <input type="hidden" name="username" value="{{ username }}" />
        <input type="hidden" name="current_email" value="{{ email }}" />
        <input type="hidden" name="current_reminder" value="{{ reminder }}" />

        <h3>Email Settings</h3>

        <p><input type="checkbox" name="reminder" value="yes" {% if reminder == 1 %} checked="true" {% endif %}/> <label>Receive Reminders</label></p>

        <p><label>Update Email</label>
        <br /><input type="text" name="email" value="{{ email }}"></p>

        <p>&nbsp;</p>

        <h3>Change Password</h3>

        <input type="hidden" name="_method" value="PUT" id="_method" />
        <input type="hidden" name="uid" value="{{ uid }}" />
        <input type="hidden" name="username" value="{{ username }}" />

        <p><label>Current Password</label>
        <br /><input type="password" name="password"></p>

        <p><label>New Password</label>
        <br /><input type="password" name="new-password"></p>

        <p><label>New Password Again</label>
        <br /><input type="password" name="new-password-again"></p>

        <p><input type="submit" value="Save"> or <a href="{{ referrer }}">Cancel</a>.</p>
    </form>
{% endblock %}
